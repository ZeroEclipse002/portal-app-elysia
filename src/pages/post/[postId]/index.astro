---
import { Separator } from "@/components/ui/separator";
import { MainViewer } from "@/components/Viewer";
import { db } from "@/db";
import { getPost } from "@/db/queries";
import Layout from "@/layouts/Layout.astro";

const { postId } = Astro.params;

if (!postId) {
  return Astro.redirect("/");
}

const post = await getPost.execute({ postId: postId as string });

if (!post) {
  return Astro.redirect("/404");
}
---

<Layout>
  <div class="max-w-6xl flex flex-col items-center gap-12 mx-auto px-4 py-12">
    <header class="mb-12 text-center">
      <h1
        transition:name={`post-title-${post.id}`}
        class="text-4xl md:text-5xl font-bold bg-gradient-to-r from-indigo-600 to-blue-500 bg-clip-text text-transparent mb-4"
      >
        {post.title}
      </h1>
      <div class="flex items-center justify-center gap-4 text-sm text-gray-600">
        <span class="flex items-center">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
            ></path>
          </svg>
          <span>
            {new Date().toLocaleDateString()}
          </span>
        </span>
      </div>
      <p
        class="mt-6 text-lg text-gray-400 font-light leading-relaxed max-w-2xl mx-auto"
      >
        {post.shortDescription}
      </p>
    </header>

    {
      post.image && (
        <div class="mb-12 rounded-2xl w-[70%] overflow-hidden shadow-xl">
          <img
            src={post.image}
            alt={post.title}
            class="w-full h-[400px] object-cover"
          />
        </div>
      )
    }
    <Separator />
    <div class="prose prose-lg max-w-none">
      <MainViewer client:only="react" postId={postId} />
    </div>
  </div>
</Layout>
